{
  "singleQuote": true,
  "tabWidth": 2,
  "semi": false,
  "endOfLine": "lf",
  "trailingComma": "none",
  "bracketSpacing": true,
  "arrowParens": "always",
  "proseWrap": "always",
  "importOrder": [
    "<TYPES>^(node:)",
    "<TYPES>",
    "<TYPES>^[.]",
    "",
    "<BUILTIN_MODULES>",
    "",
    "<THIRD_PARTY_MODULES>",
    "",
    "^(@/|#)(constants|config)(/.*)?$",
    "",
    "^(@/|#)(util|utils|helper|helpers)(/.*)?$",
    "",
    "^(@/|#).*$",
    "",
    "^[.]"
  ],
  "importOrderCaseSensitive": true,
  "importOrderParserPlugins": ["typescript", "decorators-legacy"],
  "plugins": ["@ianvs/prettier-plugin-sort-imports"]
}
