{
  "name": "syncrate",
  "description": "A simple and flexible state management solution for Vanilla JavaScript, TypeScript, and Web Components.",
  "version": "1.0.0",
  "private": false,
  "types": "./dist/index.d.ts",
  "main": "./dist/syncrate.es.js",
  "module": "./dist/syncrate.umd.js",
  "exports": {
    "types": "./dist/index.d.ts",
    "import": "./dist/syncrate.es.js",
    "require": "./dist/syncrate.umd.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && vite build",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint ./lib",
    "format": "prettier --write ./lib",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.2",
    "@vitest/coverage-v8": "^3.2.4",
    "ajv": "^8.17.1",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.0",
    "globals": "^16.2.0",
    "happy-dom": "^18.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.0",
    "typescript": "~5.7.3",
    "typescript-eslint": "^8.35.0",
    "vite": "^6.1.1",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write",
      "eslint --fix"
    ],
    "!dist/*.*": []
  },
  "engines": {
    "bun": "^1.2.15"
  },
  "author": "feliperdamaceno",
  "license": "MIT",
  "homepage": "https://github.com/feliperdamaceno/syncrate#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/feliperdamaceno/syncrate.git"
  },
  "bugs": {
    "url": "https://github.com/feliperdamaceno/syncrate/issues"
  },
  "keywords": [
    "web-components",
    "management",
    "state",
    "store"
  ]
}
